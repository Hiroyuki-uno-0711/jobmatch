  <div>
    <% if messages.present? %>
      <% messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= attachment_image_tag m.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
          </div>
          <div class="chat-content margin-bottom-15px">
            <strong>
              <%= m.content %>
            </strong>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>