<% if @job_information.errors.any? %>
  <p>入力項目に誤りございます。下記ご確認ください。</p>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @job_information.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2 class="margin-bottom-35px">求人編集</h2>

<%= form_for(@job_information) do |f| %>

    <div class="field">
      <%= f.label :該当職種 %>
        <%= f.select :genre, JobInformation.genres.keys.to_a, {}, class:"form-control", :style=> "width:19%;" %>
    </div>

    <div class="field">
      <%= f.label :勤務地 %>
        <%= f.select :area, JobInformation.areas.keys.to_a, {}, class:"form-control", :style=> "width:10%;" %>
    </div>

    <div class="field">
      <%= f.label :想定年収 %>
        <%= f.select :income, [250,300,350,400,450,500,550,600,650,700], {}, class: "form-control", :style=> "width:10%;" %>
    </div>

    <div class="field">
      <%= f.label :企業名 %>
        <%= f.text_field :company, autofocus: true, class:"form-control", :style=> "width:50%;" %>
    </div>

    <div class="field">
      <%= f.label :求人タイトル %>
        <%= f.text_field :title, autofocus: true, class:"form-control", :style=> "width:50%;" %>
    </div>

    <div class="field">
      <%= f.label :求人概要 %>
        <%= f.text_field :summary, autofocus: true, class:"form-control", :style=> "width:50%;" %>
    </div>

    <div class="field">
      <%= f.label :求人詳細 %>
        <%= f.text_area :detail, autofocus: true, class:"form-control", :style=> "width:50%;" %>
    </div>

    <div class="margin-bottom-45px">
      <%= f.label :求人画像 %>
        <%= f.attachment_field :job_image, placeholder: "求人画像" %>
    </div>

  <%= f.submit "更新", class: "btn btn-primary" %>

<% end %>
