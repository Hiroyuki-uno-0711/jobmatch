<div class="row">
  <div class="col-xs-5">
    <h2>求人詳細</h2>
  </div>
  <div class="col-xs-7"></div>
</div>

 <div class="row">
   <div class="col-xs-12">
     <h4><b><%= @job_information.title %></b></h4>
   </div>
 </div>

<div class="row"><br>
  <div class="col-xs-5">
    <%= attachment_image_tag @job_information, :job_image, format: 'jpeg', fallback: "no_image.jpg", size: "350x300", class: "margin-bottom" %>
      </div>

      <div class="col-xs-7">
        <h4>求人情報</h4>
       <table class="table table-striped">
        <tbody>

          <tr>
            <th>募集職種</th>
            <td><%= @job_information.genre %></td>
          </tr>

          <tr>
            <th>勤務地</th>
            <td><%= @job_information.area %></td>
          </tr>

          <tr>
            <th>想定年収</th>
            <td><%= @job_information.income %>万</td>
          </tr>

          <tr>
            <th>企業名</th>
            <td><%= @job_information.company %></td>
          </tr>

          <tr>
            <th>担当キャリアアドバイザー名</th>
            <td><%= @job_information.user.last_name %> <%= @job_information.user.first_name %></td>
          </tr>

        </tbody>
       </table>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-xs-12">
      <h4>求人概要</h4>
      <div class="box1">
        <%= simple_format(@job_information.summary) %>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
      <h4>求人詳細</h4>
      <div class="box1">
        <%= simple_format(@job_information.detail) %>
      </div>
  </div>
</div>

<div class="row">
    <% if @job_information.favorited_by?(current_user) %>
      <%= link_to job_information_favorites_path(@job_information), method: :delete do %>

    <% else %>

      <%= link_to book_favorites_path(@bookk), method: :post do %>


    <% end %>
</div>