<h1 class="margin-bottom-35px">お気に入り求人一覧</h1>


<table class="table table-striped">

  <thead>
    <th></th>
    <th>求人名</th>
    <th>企業名</th>
    <th></th>
  </thead>

  <% @job_informations.each do |job| %>
    <tr>

      <td>
        <%= link_to job_information_path(job.job_information) do %>
          <%= attachment_image_tag job.job_information, :job_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "img-border" %>
        <% end %>
      </td>

      <td>
        <%= job.job_information.title %>
      </td>

      <td>
        <%= job.job_information.company %>
      </td>

      <td>
        <% if current_user == @user %>
          <p><%=link_to "興味を取り消す", job_information_favorites_path(job), method: :delete, class: "btn btn-danger", :style=> "width:100%;" %></p>
        <% end %>
      </td>

    </tr>
  <% end %>

</table>