<h1 class="margin-bottom-35px">フォロー 一覧</h1>

<table class="table table-striped">

  <thead>

    <th></th>
    <th>ユーザー名</th>
    <th>性別</th>
    <th>年齢</th>

    <% if current_user.user_status == '一般ユーザー' %>
      <th>担当領域</th>
    <% else %>
      <th>経験職種</th>
    <% end %>

  </thead>

  <% @users.each do |user| %>

    <tr>
      <td>
        <%= link_to user do %>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "img-border" %>
        <% end %>
      </td>

      <td>
        <%= user.last_name %> <%= user.first_name %>
      </td>

      <td>
        <%= user.gender %>
      </td>

      <td>
        <%= user.age %>歳
      </td>

      <% if current_user.user_status == '一般ユーザー' %>
        <td>
          <%= user.expert %>
        </td>
      <% else %>
        <td>
          <%= user.career %>
        </td>
      <% end %>

    </tr>


  <% end %>
  <%= paginate @users %>

</table>