<% if current_user == @user %>
  <div class="row">
    <div class="col-xs-5">
      <h2>マイページ</h2>
    </div>
    <div class="col-xs-7"></div>
  </div>
<% end %>


<div class="row"><br>
  <div class="col-xs-5">
    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "300x300", class: "margin-bottom" %>
      </div>

      <div class="col-xs-7">
      	<h4>プロフィール</h4>
       <table class="table table-striped">
       	<tbody>

          <tr>
            <th>ユーザー</th>
            <td><%= @user.user_status %></td>
          </tr>

       		<tr>
       			<th>氏名</th>
       			<td><%= @user.last_name %> <%= @user.first_name %></td>
       		</tr>

       		<tr>
       			<th>カナ</th>
       			<td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
       		</tr>

       		<tr>
       			<th>性別</th>
       			<td><%= @user.gender %></td>
       		</tr>

       		<tr>
       			<th>年齢</th>
       			<td><%= @user.age %>歳</td>
       		</tr>

          <% if @user.user_status == '一般ユーザー' %>

           		<tr>
           			<th>経験職種</th>
           			<td><%= @user.career %></td>
           		</tr>

           		<tr>
           			<th>経験年数</th>
           			<td><%= @user.career_age %>年</td>
           		</tr>

          <% else %>

              <tr>
                <th>担当領域</th>
                <td><%= @user.expert %></td>
              </tr>

              <tr>
                <th>ご挨拶</th>
                <td><%= @user.comment %></td>
              </tr>

          <% end %>

       	</tbody>
       </table>
  </div>
</div>

<br><br><br>

<div class="row">
  <div class="col-xs-5">
    <div class="row">
      <br><br>
    </div>
    <div class="row">
        <div class="col-xs-12">
          <% if current_user == @user && @user.user_status == '一般ユーザー' %>
              <span>
                <%= link_to '求人を探す', edit_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to 'CAを探す', new_job_information_path, class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span><br><br>
              <span>
                <%= link_to 'お気に入り求人', favorites_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to 'マイページ編集', edit_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span><br><br>
              <span>
                <%= link_to 'フォロー一覧', follows_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to 'フォロワー一覧', followers_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span>

          <% elsif current_user == @user && @user.user_status == 'キャリアアドバイザー' %>

              <span>
                <%= link_to 'タスク管理', edit_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to '求人追加', new_job_information_path, class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span><br><br>
              <span>
                <%= link_to '求職者検索', edit_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to 'マイページ編集', edit_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span><br><br>
              <span>
                <%= link_to 'フォロー一覧', follows_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>　<%= link_to 'フォロワー一覧', followers_user_path(current_user), class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
              </span>

          <% else %>

            <% if @user.followed_by?(current_user) %>
              <p>
                <%=link_to "フォロー済み", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger btn-lg", :style=> "width:45%;" %>
              </p>
              <% else %>
                <p>
                  <%=link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
                </p>
            <% end %>

            <% if @isRoom == true %>
                <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a></p>
            <% else %>
                <%= form_for @room do |f| %>
                  <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                  <% end %>
                <%= f.submit "チャットする", class: "btn btn-primary btn-lg", :style=> "width:45%;" %>
                <% end %>
            <% end %>

          <% end %>

        </div>
      </div>
    </div>

  <div class="col-xs-7">
    <% if @user.user_status == '一般ユーザー' %>
      <h4>職務概要</h4>
      <div class="box1">
        <%= simple_format(@user.career_detail) %>
      </div>
    <% else %>
      <h4>実績</h4>
      <div class="box1">
        <%= simple_format(@user.result) %>
      </div>
    <% end %>
  </div>

</div><br><br>

<% if @user.user_status == 'キャリアアドバイザー' %>
  <div class="row">
    <div class="col-xs-12">
      <h2>担当求人一覧</h2>
      <table class="table table-striped">

          <thead>
            <tr>
              <th></th>
              <th>求人名</th>
              <th>企業名</th>
              <th>作成日</th>
              <% if current_user == @user %>
                <th></th>
                <th></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @job_informations.each do |job_information| %>
              <tr>
                <td>
                  <%= link_to job_information_path(job_information) do %>
                    <%= attachment_image_tag job_information, :job_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                  <% end %>
                </td>
                <td>
                  <%= job_information.title %>
                </td>
                <td>
                  <%= job_information.company %>
                </td>
                <td>
                  <%= job_information.created_at.strftime("%Y-%m-%d") %>
                </td>

                <% if job_information.user.id == current_user.id %>
                <td>
                  <%= link_to "編集", edit_job_information_path(job_information), class: "btn btn-success" %>
                </td>
                <td>
                  <%= link_to "削除", job_information_path(job_information), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
                </td>
                <% end %>

              </tr>
            <% end %>
          </tbody>

      </table>
    </div>
  </div>

<% end %>
