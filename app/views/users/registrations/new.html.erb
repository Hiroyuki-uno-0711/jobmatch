<h2>ユーザー新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %><br>

    <div class="field">
      <%= f.label :氏名 %>
        <%= f.text_field :last_name, autofocus: true, class:"form-control" ,placeholder: "姓", :style=> "width:20%;" %>
          <%= f.text_field :first_name, autofocus: true, class:"form-control" ,placeholder: "名" ,:style=> "width:20%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana, autofocus: true, class:"form-control" ,placeholder: "フリガナ性", :style=> "width:20%;" %>
          <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" ,placeholder: "フリガナ名", :style=> "width:20%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :性別 %><br>
        <%= f.select :gender, User.genders.keys.to_a, {}, class:"form-control", :style=> "width:10%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :電話番号 %>
        <%= f.text_field :phone_number,autofocus: true, class:"form-control" ,placeholder: "ハイフンなし", :style=> "width:30%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" ,placeholder: "メールアドレス", :style=> "width:40%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :ユーザー選択 %><br>
        <%= f.select :user_status, User.user_statuses.keys.to_a, {}, class:"form-control", :style=> "width:20%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" ,placeholder: "6文字以上", :style=> "width:40%;" %>
    </div> <br>

    <div class="field">
      <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" ,placeholder: "6文字以上", :style=> "width:40%;" %>
    </div> <br>

    <%= f.submit "次へ進む", class: "btn btn-primary" %>

<% end %>

